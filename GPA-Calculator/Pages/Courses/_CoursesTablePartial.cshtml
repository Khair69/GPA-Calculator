@model List<GPA_Calculator.Modles.Course>

@if(!Model.Any()){
    <div class="alert alert-info">No items found.</div>
}
else{
<table class="table table-hover">
    <thead>
        <tr>
            <th>Name</th>
            <th>Grade</th>
            <th>Hours</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.CourseName</td>
                <td>@c.Grade</td>
                <td>@c.Hours</td>
            </tr>
        }
    </tbody>
</table>
}